<style>
    .hero-links a:hover {
        background-color: rgba(220, 220, 220, 0.267);
    }
</style>
<!-- Page Header-->
<header class="masthead" style="background-image: url('assets/img/hero.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>TravelR</h1>
                    <span class="subheading"><strong>Capture and Share your Travelling Memories.</strong></span>
                    <div class="d-flex justify-content-around my-4 hero-links">
                        <a class="nav_links nav-link-light text-white px-lg-3 py-3 py-lg-4"
                            href="/users/register">Register</a>
                        <a class="nav_links nav-link  text-white px-lg-3 py-3 py-lg-4" href="/users/login">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Smooch&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Koulen&display=swap');

    .card-images {
        height: 250px;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .title {
        font-size: 1.7rem;
        font-family: 'Koulen', cursive;
        font-weight: 800;
    }

    .content {
        font-size: 1.1rem;
        font-family: "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
        font-weight: 600;
        margin: 20px 0px;
    }

    .author {
        font-size: 1rem;
        font-style: italic;
        font-family: "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";

        margin: 20px 0px;
    }

    .card {
        padding: 10px 10px;
        height: 500px;
        box-shadow: 0px 40px 80px rgba(55, 55, 55, 0.568);
    }
</style>

<!-- Posts -->
<div class="container">
    <h2 class="mx-3">Recent Memories: </h2>
    <div class="d-flex flex-wrap justify-content-around">
        <% for(i=0; i<data.length; i++) { %>
            <a href="/travels/<%= data[i].id %>">
                <div class="card my-4" style="width: 18rem;">
                    <div class="card-images" style="background-image: url('<%= data[i].image %>')"></div>
                    <div class="card-body">
                        <h5 class="title">
                            <%= data[i].title %>
                        </h5>
                        <p class="content">
                            <%= data[i].content.slice(0, 150)+'...' %>
                        </p>
                        <p class="author">
                            Post by: <%= data[i].author %>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>
</div>